{% extends 'dashboard.twig' %}
{% block body %}
    <form method="post">
    	<input type="hidden" value="{{ app.user.id }}" id="id" name="id">
    	<div class="form-group">
    		<label for="name">نام</label>
    		<input type="text" name="name" id="name" class="form-control" value="{{ app.user.name }}">
    	</div>

    	<div class="form-group">
    		<label for="username">نام کاربری</label>
    		<input type="text" name="username" id="username" class="form-control" value="{{ app.user.username }}">
    	</div>

    	<div class="form-group">
    		<label for="email">ایمیل</label>
    		<input type="text" name="email" id="email" class="form-control" value="{{ app.user.email }}">
    	</div>

    	<div class="form-group">
    		<label for="level">سطح</label>
    		<input type="text" name="level" id="level" class="form-control" value="{{ userLevels[app.user.level].value }}">
    	</div>

    	<button class="btn btn-success">ثبت</button>
    </form>
    {{ H.partial('errors', {'errors': viewBag.errors}) }}

    <form method="post" action="changepassword">
        <input type="hidden" value="{{ app.user.id }}" id="id" name="id">
        <div class="form-group">
            <label for="oldpassword">گذرواژه قبلی</label>
            <input type="text" name="oldpassword" id="oldpassword" class="form-control" value="{{ app.user.oldpassword }}">
        </div>

        <div class="form-group">
            <label for="newpassword">گذرواژه جدید</label>
            <input type="text" name="newpassword" id="newpassword" class="form-control" value="{{ app.user.newpassword }}">
        </div>

        <button class="btn btn-success">ثبت</button>
    </form>
{% endblock %}