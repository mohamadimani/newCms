{% extends 'login.twig' %}

{% block body %}
	<form method="post" class="login-form">
	<h2><i class="glyphicon glyphicon-user"></i>بازیابی گذرواژه</h2>
		<div class="form-group" >
			<label form="email">ایمیل</label>
			<input type="email" name="email" id="email" class="form-control">
		</div>

		<div class="form-group" >
			<label for="question">سوال امنیتی</label>
			<input type="text" name="question" id="question" class="form-control">
		</div>

		<button class="btn btn-primary">بازیابی</button>
	</form>
{% endblock %}