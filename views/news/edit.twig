{% extends 'dashboard.twig' %}

{% block body %}
    <form method="post">
        <div class="form-group">
            <label for="group_id">گروه خبری</label>
            {{ H.coupleSelect('group_id', newsGroups, news.fields.group_id) }}
        </div>

        <div class="form-group">
            <label for="title">عنوان</label>
            <input type="text" name="title" id="title" class="form-control" value="{{ news.fields.title }}">
        </div>

        <div class="form-group">
            <label for="body">متن خبر</label>
            <textarea name="body" id="body" class="form-control" rows="8">{{ news.fields.body }}</textarea>
        </div>

        <button class="btn btn-success">ثبت تغییرات</button>
    </form>
    {{ H.partial('errors', {'errors': viewBag.errors}) }}
{% endblock %}